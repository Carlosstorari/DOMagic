<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatalogingMtgCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/black_header</item>
        <item name="colorOnPrimary">@color/grey_900</item>
        <item name="colorSecondary">@color/color_fab</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/font_color_fab</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:editTextColor">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CatalogingMtgCards.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Dialog Style-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:colorBackground">@color/black_card_item</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="SearchTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="android:textColorHint">@color/font_color_card</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_text_color</item>
        <item name="hintTextColor">@color/input_text_color</item>
        <item name="android:textColorHint">@color/ic_filter_input</item>
    </style>

    <style name="Theme.CatalogingMtgCards.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CatalogingMtgCards.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>